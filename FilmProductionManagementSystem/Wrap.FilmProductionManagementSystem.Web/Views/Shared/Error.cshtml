@model ErrorViewModel
@{
    ViewData["Title"] = "Something went wrong";
    bool showDetails = Model?.ShowRequestId == true;
}

<div class="dashboard-wrapper">
    <div class="container py-4">
        <div class="welcome-banner">
            <h1>Something went wrong</h1>
            <p>We hit an unexpected error while processing your request.</p>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-lg-7">
                <div class="card border-0 shadow-lg" style="border-radius: 18px;">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-start gap-3">
                            <div class="stat-icon" style="width:56px;height:56px;border-radius:16px;background: linear-gradient(135deg, #ff512f 0%, #dd2476 100%); color: white;">
                                <i class="bi bi-bug-fill" style="font-size:1.4rem;"></i>
                            </div>

                            <div class="flex-grow-1">
                                <h3 class="mb-1 fw-bold">Error 500</h3>
                                <p class="mb-3 text-muted">
                                    Please try again in a moment. If the problem persists, contact support.
                                </p>

                                @if (showDetails)
                                {
                                    <div class="alert alert-secondary d-flex align-items-center gap-2 mb-3" role="alert">
                                        <i class="bi bi-hash"></i>
                                        <div>
                                            <div class="fw-semibold">Request ID</div>
                                            <code class="small">@Model!.RequestId</code>
                                        </div>
                                    </div>
                                }

                                <div class="d-flex flex-wrap gap-2">
                                    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-custom">
                                        <i class="bi bi-house-door me-2"></i>Go to Dashboard
                                    </a>

                                    <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
                                        <i class="bi bi-arrow-clockwise me-2"></i>Retry
                                    </button>

                                    <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                                        <i class="bi bi-arrow-left me-2"></i>Go Back
                                    </button>
                                </div>

                                <hr class="my-4" />

                                <div class="small text-muted">
                                    Tip: if you were submitting a form, double-check required fields and try again.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* Developer guidance kept, but visually contained *@
                <div class="alert alert-warning mt-3 mb-0" role="alert">
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-shield-lock mt-1"></i>
                        <div>
                            <div class="fw-semibold">Development mode note</div>
                            <div class="small">
                                For local debugging only: switch to <strong>Development</strong> to see detailed errors.
                                Don’t enable it in production because it may expose sensitive information.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="recent-activity">
                    <h4><i class="bi bi-life-preserver me-2"></i>What you can do</h4>

                    <div class="activity-item">
                        <div class="activity-title">Refresh the page</div>
                        <div class="activity-time">Ctrl/Cmd + R</div>
                    </div>

                    <div class="activity-item">
                        <div class="activity-title">Try again from Dashboard</div>
                        <div class="activity-time">Use navigation</div>
                    </div>

                    <div class="activity-item">
                        <div class="activity-title">Sign out and sign in</div>
                        <div class="activity-time">If auth/session is stuck</div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-custom">
                            <i class="bi bi-house-door me-2"></i>Back to Dashboard
                        </a>
                    </div>

                    @if (showDetails)
                    {
                        <div class="mt-3 small text-muted">
                            Share the Request ID with support so the error can be traced.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>