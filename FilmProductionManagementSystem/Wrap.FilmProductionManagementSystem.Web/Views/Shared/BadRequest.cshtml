@{
    ViewData["Title"] = "Bad Request";
}

<div class="dashboard-wrapper">
    <div class="container py-4">
        <div class="welcome-banner">
            <h1>Something’s off</h1>
            <p>Your request can’t be processed right now. Please check the input and try again.</p>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-lg-12">
                <div class="card border-0 shadow-lg" style="border-radius: 18px;">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-start gap-3">
                            <div class="stat-icon" style="width:56px;height:56px;border-radius:16px;background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); color: white;">
                                <i class="bi bi-exclamation-triangle" style="font-size:1.4rem;"></i>
                            </div>

                            <div class="flex-grow-1">
                                <h3 class="mb-1 fw-bold">Error 400</h3>
                                <p class="mb-3 text-muted">
                                    This usually happens when required data is missing, invalid, or the link is outdated.
                                </p>

                                <div class="alert alert-warning mb-3" role="alert">
                                    <i class="bi bi-info-circle me-2"></i>
                                    If you reached this page after submitting a form, review the fields and submit again.
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-custom-1 me-2">
                                        <i class="bi bi-house-door me-2"></i>Go to Dashboard
                                    </a>
                                </div>

                                <hr class="my-4" />

                                <div class="small text-muted">
                                    If this keeps happening, try refreshing the page or logging out and back in.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Common fixes -->
            <h3 class="section-title mt-4">Common fixes</h3>
            <div  class="row">
                <div class="col-md-4">
                    
                    <div class="action-card">
                        <h5>Refresh the page</h5>
                        <p>Ctrl/Cmd + R</div>
                </div>
                <div class="col-md-4">
                    
                    <div class="action-card">
                        <h5>Try again from the Dashboard</h5>
                        <p>Use navigation menu</div>
                </div>
                <div class="col-md-4">
                    
                    <div class="action-card">
                        <h5>Re-open the feature</h5>
                        <p>Avoid old bookmarks</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>