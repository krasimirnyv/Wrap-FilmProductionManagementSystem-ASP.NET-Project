@{
    ViewData["Title"] = "Not Found";
}

<div class="dashboard-wrapper">
    <div class="container py-4">
        <div class="welcome-banner">
            <h1>Oops… Page not found</h1>
            <p>The page you’re looking for doesn’t exist or was moved.</p>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-lg-12">
                <div class="card border-0 shadow-lg" style="border-radius: 18px;">
                    <div class="card-body p-5">
                        <div class="d-flex align-items-start gap-3">
                            <div class="stat-icon primary" style="width:56px;height:56px;border-radius:16px;">
                                <i class="bi bi-compass" style="font-size:1.4rem;"></i>
                            </div>

                            <div class="flex-grow-1">
                                <h3 class="mb-1 fw-bold">Error 404</h3>
                                <p class="mb-3 text-muted">
                                    We couldn’t find that page. Try going back, or use search to find what you need.
                                </p>

                                <div class="d-flex flex-wrap gap-2">
                                    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-custom-1 me-2">
                                        <i class="bi bi-house-door me-2"></i>Go to Dashboard
                                    </a>
                                </div>

                                <hr class="my-4" />

                                <div class="small text-muted">
                                    Tip: if you typed the address manually, check for typos.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <h3 class="section-title mt-4">Quick Actions</h3>
            <div  class="row">
                <div class="col-md-4" >
                    <a asp-controller="Production" asp-action="Create" class="action-card" >
                        <div class="action-card-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <h5>Create New Project</h5>
                        <p>Start a new film production project</p>
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-controller="Production" asp-action="AllProjects" class="action-card">
                        <div class="action-card-icon" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white;">
                            <i class="bi bi-collection-play"></i>
                        </div>
                        <h5>Browse Projects</h5>
                        <p>View all projects and details</p>
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-controller="Schedule" asp-action="UpcomingShoots" class="action-card">
                        <div class="action-card-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <h5>Upcoming Shoots</h5>
                        <p>Check what’s scheduled next</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>