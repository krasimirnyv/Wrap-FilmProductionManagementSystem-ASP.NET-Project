@{
    ViewData["Title"] = "Start";
}

<link rel="stylesheet" href="~/css/registration.css" asp-append-version="true"/>

<section class="container-fluid home-hero" xmlns="http://www.w3.org/1999/html">
    <div class="hero-overlay"></div>

    <div class="hero-content text-center">
        <h1 class="hero-title">
            It’s a <span>Wrap!</span>
        </h1>

        <p class="hero-subtitle">
            Wrap is a film production management system that helps filmmakers and actors
            organize scripts, schedules, assets, and collaborations - from pre-production
            to the movie premiere.
        </p>

        <p class="hero-subtitle secondary">
            One place for stories, crews, casts, and shooting days.
        </p>

        <div class="hero-actions">
            <a asp-controller="Account"
               asp-action="RegisterCrewStepOne"
               class="btn btn-role">
                🎬 Join as <strong>Filmmaker</strong>
            </a>

            <a asp-controller="Account"
               asp-action="RegisterCast"
               class="btn btn-role">
                🎭 Join as <strong>Actor</strong>
            </a>
        </div>
        
        <p class="hero-subtitle secondary-2">
            Select a role to register.
        </p>
        
        <div class="hero-login-link">
            Returning to set?
            <a asp-controller="Account"
               asp-action="Login"
               class="login-link">Log In</a>
        </div>
    </div>
</section>