@using Wrap.ViewModels.LoginAndRegistration

@model AccountLogInInputModel

@{
    ViewData["Title"] = "Log In";
}

<link rel="stylesheet" href="~/css/registration.css" asp-append-version="true" />

<section class="home-hero">
<div class="registration-container">
    <div class="registration-card">

        <!-- Header -->
        <div class="registration-header">
            <h2 class="text-center">
                Log In to <span class="text-wrap-red">Wrap</span>
            </h2>
            <p class="text-center text-muted">
                Access your productions, scripts, and schedules
            </p>
        </div>

        <!-- Form -->
        <form asp-controller="Account"
              asp-action="Login"
              method="post"
              class="registration-form">

            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Username -->
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName"
                       class="form-control"
                       placeholder="john.doe"
                       autofocus />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       placeholder="Your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Role selection -->
            <div class="form-group mb-4">
                <label class="form-label">Log in as</label>

                <div class="gender-selection">
                    <div class="form-check form-check-inline">
                        <input asp-for="Role"
                               class="form-check-input"
                               type="radio"
                               name="Role"
                               value="Crew"
                               id="roleCrew"
                               required />
                        <label asp-for="Role" class="form-check-label" for="roleCrew">
                            üé¨ Filmmaker
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input asp-for="Role"
                               class="form-check-input"
                               type="radio"
                               name="Role"
                               value="Cast"
                               id="roleCast" />
                        <label asp-for="Role" class="form-check-label" for="roleCast">
                            üé≠ Actor
                        </label>
                    </div>
                </div>
            </div>
            
            <div class="checkbox form-check form-check-inline mb-3">
                <input asp-for="RememberMe"
                       class="form-check-input" 
                       type="checkbox"
                       name="Remember me?"/>
                    <label asp-for="RememberMe" class="form-check-label">Remember me?</label>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-outline-secondary">
                    ‚Üê Back to Home
                </a>

                <button type="submit"
                        class="btn btn-wrap-primary">
                    Log In
                </button>
            </div>
        </form>
    </div>
</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}